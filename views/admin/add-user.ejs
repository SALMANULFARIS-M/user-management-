<%- include('../layout/header.ejs') %>
    <section class="vh-100"
        style="background-image: url('https://i.pinimg.com/originals/af/a8/04/afa804efe31971245d629b220c22232b.gif');background-size: cover;    background-repeat: no-repeat;" ">
        <div class=" container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black bg-dark" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4 text-white">ADD A USER</p>

                                <form class="mx-1 mx-md-4" action="/admin/add-user" method="post">

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="form3Example1c" class="form-control" name="name"
                                                placeholder="Enter a name for user" required />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="form3Example3c" class="form-control" name="email"
                                                placeholder="Enter a Email for user" required />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input id="form3Example4c" class="form-control" name="mno"
                                                placeholder="Enter a PH Number for user " required />

                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            <input id="form3Example4cd" class="form-control" name="password"
                                                placeholder="Create a password for user" required />

                                        </div>
                                    </div>


                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">


                                        <button type="submit" class="btn btn-primary btn-lg">ADD USER</button>
                                        <a href="/admin/home" class="btn btn-primary btn-lg mx-3">Back to Pannel</a>
                                    </div>

                                </form>

                            </div>
                            <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                    class="img-fluid rounded" alt="Sample image">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>




    <%- include('../layout/footer.ejs') %>